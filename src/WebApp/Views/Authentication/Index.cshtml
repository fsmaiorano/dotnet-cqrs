@{
  ViewData["Title"] = "Authentication Page";
}

<content class="min-h-screen flex items-center justify-center">
  <div
    class="max-w-sm rounded overflow-hidden shadow-lg border-sky-500 border-2 border-solid"
  >
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2">Authentication</div>

      <p class="text-gray-700 text-base">
        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptatibus
        quia, nulla! Maiores et perferendis eaque, exercitationem praesentium
        nihil.
      </p>
      <form asp-action="handleAuthentication" method="post">
        <div class="space-y-3 mt-3 mb-3 w-full">
          <input type="email" placeholder="Email" name="email" class="w-full h-10 border-2 border-solid border-sky-500 rounded-md p-4">
          <input type="password" placeholder="Password" name="password" class="w-full h-10 border-2 border-solid border-sky-500 rounded-md p-4">
        </div>
        <div class="flex flex-col items-end">
          <button
            type="submit"
            class="w-40 h-39 bg-zin-300 hover:bg-sky-500 hover:text-white border-2 border-solid border-sky-500 p-1.5"
          >
            Sign in
          </button>
        </div>
      </form>
    </div>
    <div class="px-6 pt-4 pb-2">
      <span
        class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
        >#photography</span
      >
      <span
        class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
        >#travel</span
      >
      <span
        class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
        >#winter</span
      >
    </div>
  </div>
</content>

